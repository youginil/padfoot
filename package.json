{
    "name": "padfoot",
    "version": "0.1.0",
    "description": "A PDF editor",
    "main": "dist/main.cjs",
    "type": "module",
    "scripts": {
        "dev:web": "vite",
        "dev:main": "npm run build:main && electron .",
        "build:web": "vite build",
        "build:main": "vite build -c vite.main.ts",
        "make": "npm run build:web && npm run build:main && electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "GPL-3.0-only",
    "packageManager": "pnpm@10.4.1",
    "dependencies": {
        "mupdf": "^1.3.6",
        "solid-js": "^1.9.5"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.3",
        "daisyui": "^5.0.18",
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12",
        "prettier": "^3.5.3",
        "tailwindcss": "^4.1.3",
        "typescript": "^5.8.3",
        "vite": "^6.2.5",
        "vite-plugin-solid": "^2.11.6"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "electron"
        ]
    },
    "build": {
        "appId": "com.youginil.padfoot",
        "productName": "Padfoot",
        "directories": {
            "output": "out"
        },
        "win": {
            "icon": "build/logo.ico"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "build/mac.png"
        },
        "linux": {
            "icon": "build/logo.png"
        },
        "nsis": {
            "oneClick": false
        },
        "files": [
            "./dist"
        ]
    }
}
